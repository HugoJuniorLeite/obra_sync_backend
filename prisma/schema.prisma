generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model master {
  id              Int       @id @default(autoincrement())
  name            String
  email           String    @unique
  cpf             String    @unique
  token_access    String?
  code_expires_at DateTime?
  code_used       Boolean   @default(false)
  created_at      DateTime  @default(now())
}

model firm {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  cnpj     String    @unique
  projects project[] // relation 1:N
}

model project {
  id                   Int             @id @default(autoincrement())
  name                 String
  number_contract      String          @unique
  description          String
  estimated_price      Decimal         @db.Decimal(16, 2)
  start_date           DateTime
  estimated_end_date   DateTime
  status               status_project  @default(planned)
  created_at           DateTime        @default(now())
  updated_at           DateTime        @updatedAt
  firm_id              Int
  firm                 firm            @relation(fields: [firm_id], references: [id])
  responsible_contract String

  @@index([start_date, estimated_end_date])
  @@map("project")
}

enum status_project {
  planned
  active
  completed
  canceled
}
